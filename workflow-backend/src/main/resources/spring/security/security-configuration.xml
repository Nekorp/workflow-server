<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
	http://www.springframework.org/schema/security
	http://www.springframework.org/schema/security/spring-security-3.1.xsd">
 
	<http create-session="stateless">
		<intercept-url pattern="/api/**" access="ROLE_USER" />
		<http-basic/>
	</http>
	
	<authentication-manager>
		<authentication-provider user-service-ref="workflowUserDetailsService"/>
	</authentication-manager>
	
	<beans:bean id="workflowUserDetailsService" class="org.nekorp.workflow.backend.security.service.WorkflowUserDetailsService">
		<beans:property name="userSecurityDAO" ref="userSecurityDAO"/>
	</beans:bean>
</beans:beans>