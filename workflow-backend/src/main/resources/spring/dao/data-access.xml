<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans     
        http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
        http://www.springframework.org/schema/context 
        http://www.springframework.org/schema/context/spring-context-3.2.xsd">
    
	<bean id = "objectifyFactory" class="com.googlecode.objectify.spring.ObjectifyFactoryBean">
		<property name="classes">
    		<list>
				<value>org.nekorp.workflow.backend.model.cliente.Cliente</value>
				<value>org.nekorp.workflow.backend.model.auto.Auto</value>
				<value>org.nekorp.workflow.backend.model.servicio.Servicio</value>
				<value>org.nekorp.workflow.backend.model.servicio.bitacora.Evento</value>
			</list>
		</property>
	</bean>
    
    <bean id="clienteDAO" class="org.nekorp.workflow.backend.data.access.imp.ClienteDAOImp">
    	<property name="objectifyFactory" ref="objectifyFactory"/>
    </bean>
    
	<bean id="autoDAO" class="org.nekorp.workflow.backend.data.access.imp.AutoDAOImp">
		<property name="objectifyFactory" ref="objectifyFactory"/>
	</bean>
	
	<bean id="servicioDAO" class="org.nekorp.workflow.backend.data.access.imp.ServicioDAOImp">
		<property name="objectifyFactory" ref="objectifyFactory"/>
	</bean>
	
	<bean id="eventoDAO" class="org.nekorp.workflow.backend.data.access.imp.EventoDAOImp">
		<property name="objectifyFactory" ref="objectifyFactory"/>
	</bean>
	
</beans>